<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="?actionBarSize">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MenuFragment"
    android:id="@+id/menu_fragment_layout"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/grids_spacing">
        <ImageView
            android:layout_width="120dip"
            android:layout_marginTop="10dp"
            android:layout_height="120dip"
            android:src="@drawable/ic_launcher_monochrome"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:elevation="0dip"
            android:minWidth="60dip"
            app:tint="?colorAccent" />
        <TextView
            android:textColor="?android:colorAccent"
            android:ellipsize="marquee"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/grids_spacing"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="?colorAccent"
        android:textStyle="bold"
        android:clickable="true"
        android:id="@+id/new_about_button"
        app:drawableStartCompat="@drawable/ic_details"
        android:drawablePadding="15dp"
        app:drawableTint="?colorAccent"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:layout_marginBottom="@dimen/grids_spacing"
        android:focusable="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:textSize="20sp"
        android:clickable="true"
        android:stateListAnimator="@animator/mtrl_btn_unelevated_state_list_anim"
        app:rippleColor="@color/text_btn_ripple_color"
        android:textColor="?colorAccent"
        android:textStyle="bold"
        android:id="@+id/new_settings_button"
        app:drawableStartCompat="@drawable/ic_settings"
        android:drawablePadding="15dp"
        app:drawableTint="?colorAccent"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:focusable="true"
        android:layout_marginBottom="@dimen/grids_spacing"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/github"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:textSize="20sp"
        android:clickable="true"
        android:stateListAnimator="@animator/mtrl_btn_unelevated_state_list_anim"
        app:rippleColor="@color/text_btn_ripple_color"
        android:textColor="?colorAccent"
        android:textStyle="bold"
        android:id="@+id/github_button"
        app:drawableStartCompat="@drawable/github_mark"
        android:drawablePadding="15dp"
        app:drawableTint="?colorAccent"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:focusable="true"
        android:layout_marginBottom="@dimen/grids_spacing"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/updates"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:textSize="20sp"
        android:clickable="true"
        android:stateListAnimator="@animator/mtrl_btn_unelevated_state_list_anim"
        app:rippleColor="@color/text_btn_ripple_color"
        android:textColor="?colorAccent"
        android:textStyle="bold"
        android:id="@+id/updates_button"
        app:drawableStartCompat="@drawable/update"
        android:drawablePadding="15dp"
        app:drawableTint="?colorAccent"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:focusable="true"
        android:layout_marginBottom="@dimen/grids_spacing"/>


</LinearLayout></ScrollView>
