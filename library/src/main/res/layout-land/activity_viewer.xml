<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center" />

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:transitionName="appbar"
        app:elevation="0dp"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="?toolbarStyle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/back_background"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="0dp"
            android:layout_margin="20dp">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/bottom_navigation2"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bottom_actions_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bottom"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
/>
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_bottom"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:paddingStart="25dp"
        android:textColor="@color/white"
        />-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="15dp"
    android:gravity="center"
    android:layout_marginBottom="15dp"
>
      <ImageButton
          android:id="@+id/downloadbutton"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:src="@drawable/ic_download"
          android:background="@drawable/card_background_white"/>
      <!--<ImageButton
          android:id="@+id/applybutton"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:background="@drawable/card_background_accent"
          android:src="@drawable/ic_apply"
          android:layout_margin="5dp"/>-->
    <Button
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:id="@+id/applybutton"
          android:background="@drawable/card_background_accent"
          android:textSize="20sp"
          android:textColor="?colorAccent"
          android:textStyle="bold"
          android:text="@string/apply"
        android:textAllCaps="true"
          android:layout_marginHorizontal="15dp"/>
    <ImageButton
          android:id="@+id/infobutton"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:background="@drawable/card_background_white"
          android:src="@drawable/ic_details"/>
</LinearLayout>
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
